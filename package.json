{
	"name": "react-extension",
	"displayName": "React-Extension",
	"description": "useful tools for react(snippets and template)",
	"version": "0.2.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/2256184693/React-Extension"
	},
	"license": "MIT",
	"icon": "src/assets/react.png",
	"publisher": "sh",
	"engines": {
		"vscode": "^1.39.1"
	},
	"categories": [
		"Snippets"
	],
	"activationEvents": [
		"onCommand:extension.templateCreate"
	],
	"main": "./out/extensions/main.js",
	"contributes": {
		"snippets": [
			{
				"language": "javascriptreact",
				"path": "./src/snippets/jsx.json"
			},
			{
				"language": "typescriptreact",
				"path": "./src/snippets/tsx.json"
			},
			{
				"language": "javascript",
				"path": "./src/snippets/js.json"
			},
			{
				"language": "typescript",
				"path": "./src/snippets/ts.json"
			},
			{
				"language": "javascriptreact",
				"path": "./src/snippets/react.json"
			},
			{
				"language": "typescriptreact",
				"path": "./src/snippets/react.json"
			},
			{
				"language": "javascript",
				"path": "./src/snippets/react.json"
			},
			{
				"language": "typescript",
				"path": "./src/snippets/react.json"
			}
		],
		"commands": [
			{
				"command": "extension.templateCreate",
				"title": "新建模版"
			}
		],
		"menus": {
			"editor/context": [],
			"explorer/context": [
				{
					"command": "extension.templateCreate",
					"group": "navigation"
				}
			]
		},
		"keybindings": [],
		"configuration": {
			"type": "object",
			"title": "React-Extension",
			"properties": {
				"react.extension.snippets.tempType": {
					"type": "string",
					"default": "default",
					"description": "默认生成的模版类型",
					"enum": [
						"default",
						"component",
						"functional"
					],
					"enumDescriptions": [
						"默认模版",
						"组件模版（包括classNames库）",
						"函数组件"
					]
				},
				"react.extension.snippets.fileType": {
					"type": "string",
					"default": "typescript",
					"description": "默认的文件类型",
					"enum": [
						"typescript",
						"javascript"
					]
				},
				"react.extension.snippets.cssType": {
					"type": "string",
					"default": "less",
					"description": "默认的样式文件类型",
					"enum": [
						"less",
						"scss"
					]
				},
				"react.extension.snippets.autoCreate": {
					"type": "boolean",
					"default": false,
					"description": "是否根据设置自动生成模版"
				},
				"react.extension.snippets.template": {
					"type": "array",
					"default": [],
					"description": "自定义模版（支持模版目录或者描述模版的json文件）"
				},
				"react.extension.snippets.defaultTemplate": {
					"type": "string",
					"default": "",
					"description": "默认生成的自定义模版路径（仅在自动生成模版勾选时生效）"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"eslint": "^5.13.0",
		"glob": "^7.1.4",
		"mocha": "^6.2.2",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	}
}
